{% extends "bootstrap.html.twig" %}


{% block body %}

<h1 class="text-center mb-5 mt-5">Nos vehicules</h1>


<div class="row justify-content-center">
    {% for key, value in vehicules %}
        <div class="col-md-4 mb-5">
            <div class="card" style="width: 24rem;">
                <img class="card-img-top" src="{{ value.image }}" alt="vehicule image" style=" height:200px">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ value.nom }}</h5>
                    <h6 class="card-text text-center">{{ value.modele }}</h6>
                    <p class="card-text text-center">{{ value.description }}</p>
                    <p class="card-text text-center"> {{ value.dateCreation|date('d-m-Y') }}</p>
                    <p class="card-text text-center"> 
                    {% if value.EnVente == 1 %}
                        en vente
                    {% else %}
                        vendu 
                    {% endif %}
                    </p>
                </div>
            </div>
        </div>

    {% endfor %}
</div>

{% endblock %}




